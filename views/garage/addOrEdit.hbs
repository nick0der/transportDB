<h3>{{viewTitle}}</h3>

<form action="/garage" method="POST" autocomplete="off">
<input type="hidden" name="_id" value="{{garage._id}}">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label>Number</label>
      <input type="text" class="form-control" name="number" placeholder="Number" value="{{garage.number}}">
      <div class="text-danger">
        {{garage.numberError}}
      </div>
    </div>
    <div class="form-group col-md-6">
      <label>Address</label>
      <input type="text" class="form-control" name="address" placeholder="Address" value="{{garage.address}}">
      <div class="text-danger">
        {{garage.addressError}}
      </div>
    </div>
    <div class="form-group col-md-6">
      <label>Area</label>
      <input type="number" class="form-control" name="area" placeholder="Area" value="{{garage.area}}">
      <div class="text-danger">
        {{garage.areaError}}
      </div>
    </div>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-info"><i class="fa fa-database" style="margin-right: 5px;"></i>Submit</button>
    <a class="btn btn-secondary" href="/garage/list"><i class="fa fa-list-alt" style="margin-right: 5px;"></i>View All</a>

  </div>

</form>
