<h3>{{viewTitle}}</h3>

<form action="/route" method="POST" autocomplete="off">
<input type="hidden" name="_id" value="{{route._id}}">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label>Start</label>
      <input type="text" class="form-control" name="start" placeholder="Start" value="{{route.start}}">
      <div class="text-danger">
        {{route.startError}}
      </div>
    </div>
    <div class="form-group col-md-6">
      <label>Finish</label>
      <input type="text" class="form-control" name="finish" placeholder="Finish" value="{{route.finish}}">
      <div class="text-danger">
        {{route.finishError}}
      </div>
    </div>
    <div class="form-group col-md-6">
      <label>Distance</label>
      <input type="number" class="form-control" name="distance" placeholder="Distance" value="{{route.distance}}">
      <div class="text-danger">
        {{route.distanceError}}
      </div>
    </div>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-info"><i class="fa fa-database" style="margin-right: 5px;"></i>Submit</button>
    <a class="btn btn-secondary" href="/route/list"><i class="fa fa-list-alt" style="margin-right: 5px;"></i>View All</a>

  </div>

</form>
